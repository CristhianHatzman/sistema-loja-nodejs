<%- include('partials/navbar.ejs') %>
<%- include('partials/header.ejs') %>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Cadastrar Novo Produtos</h1>
        </div>
        <div class="card-body">
            <form action="/produtos/update/<%= produto.id %>" method="post">
                <input type="hidden" name="id" value="<%= produto.id %>">
                <label>Nome: </label>
                <input type="text" name="nome" id="nome" value="<%= produto.nome %>" class="form-control" required>
                <label>Preço: </label>
                <input type="text" name="preco" id="preco" value="<%= produto.preco %>" class="form-control" required>
                <label>Categoria: </label>
                <input type="text" name="categoria" id="categoria" value="<%= produto.categoria %>" class="form-control" required>
                <label>Estoque: </label>
                <input type="text" name="estoque" id="estoque" value="<%= produto.estoque %>" class="form-control" required>
                <br>
                <button type="submit" value="Alterar" class="btn btn-success" onclick="return confirm('Confirma as alterações para o produto? <%= produto.nome %>')">Alterar</button>
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs') %>