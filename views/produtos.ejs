<%- include('partials/navbar.ejs') %>
<%- include('partials/header.ejs') %>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Cadastrar Novo Produtos</h1>
        </div>
        <div class="card-body">
            <form action="/produtos/new" method="post">
                <label>Nome: </label>
                <input type="text" name="nome" id="nome" placeholder="Nome do Produto" class="form-control" required>
                <label>Preço: </label>
                <input type="text" name="preco" id="preco" placeholder="Preço do Produto" class="form-control" required>
                <label>Categoria: </label>
                <input type="text" name="categoria" id="categoria" placeholder="Categoria do Produto" class="form-control" required>
                <label>Estoque: </label>
                <input type="text" name="estoque" id="estoque" placeholder="Estoque do Produto" class="form-control" required>
                <br>
                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
    </div>
</div>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Produtos Cadastrados</h1>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="table-warning">
                    <tr>
                        <th>Imagem</th>
                        <th>Nome:</th>
                        <th>Preço:</th>
                        <th>Categoria:</th>
                        <th>Estoque: </th>
                        <th colspan="2">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Chamando o array de objetos -->
                <% produtos.forEach(produto => { %>
                    <tr>
                        <td style="text-align: center;"><img src="/imgs/produto.png"></td>
                        <td><%= produto.nome %></td>
                        <td><%= produto.preco.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %></td>
                        <td><%= produto.categoria %></td>
                        <td><%= produto.estoque %></td>
                        <td><a href="/produtos/edit/<%= produto.id %>"><button>Editar</button></a></td>
                        <td><a href="/produtos/delete/<%= produto.id %>"><button>Excluir</button></a></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs') %>